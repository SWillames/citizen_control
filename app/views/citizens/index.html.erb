<div class="container">
  <h1><%= t('titles.listing', model: @citizens.model_name.human(count: 2)) %></h1>

  <div class="form-row">
    <div class="col-md-6 mb-3"></div>
    <div class="col-md-3 mb-3 text-right">
      <%= link_to new_citizen_path, class:"btn btn-success btn-circle" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="col-md-3 mb-3">
      <%= search_form_for @search do |f| %>
          <div class="input-group mb-3">
            <%= f.search_field :full_name_cont, autofocus: true, class: "form-control", placeholder: "Pesquisa Nome.." %>
            <button class="btn btn-primary" type="submit" name="action" >
              <i class="fas fa-search"></i>
            </button>
          </div>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered text-center" >
      <thead class="thead-dark">
      <tr>
        <th scope="col"> <%= @citizens.human_attribute_name('full_name') %></th>
        <th scope="col"> <%= @citizens.human_attribute_name('cpf') %></th>
        <th scope="col"> <%= @citizens.human_attribute_name('Email')%></th>
        <th scope="col"> <%= @citizens.human_attribute_name('birth_date')%></th>
        <th scope="col"> <%= @citizens.human_attribute_name('telephone')%></th>
        <th scope="col"> <%= @citizens.human_attribute_name('status')%></th>
        <th colspan="2"> AÃ§oes </th>
      </tr>
      </thead>

      <tbody>
      <% @citizens.each do |citizen| %>
        <tr>
          <td><%= citizen.full_name %></td>
          <td><%= citizen.cpf %></td>
          <td><%= citizen.email %></td>
          <td><%= l citizen.birth_date %></td>
          <td><%= citizen.telephone %></td>
          <td><%= citizen.status %></td>
          <td> <%= link_to citizen, class:"btn btn-link btn-circle" do %>
              <i class="far fa-eye"></i>
            <% end %></td>
          <td><%= link_to edit_citizen_path(citizen), class:"btn btn-link btn-circle" do %>
              <i class="fas fa-user-edit"></i>
            <% end %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </div>


  <%== pagy_bootstrap_nav(@pagy).html_safe %>
</div>


